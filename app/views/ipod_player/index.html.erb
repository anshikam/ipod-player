<h2>IPod Player</h2>
<p>Sort by Name</p>
<p>Sort by Artist</p>

<table>
  <tr>
    <th>Artist</th>
    <th>Name</th>
  </tr>
  <% @songs.each do |song| %>
      <tr>
        <td><%= song.id %></td>
        <td><%= song.name %></td>
        <td><%= song.artist %></td>

      </tr>
  <% end %>
</table>